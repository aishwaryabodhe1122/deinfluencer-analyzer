# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/deinfluencer

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secret
JWT_SECRET=your-secret-key-here

# OAuth Social Authentication Credentials
# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Meta/Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Twitter/X OAuth
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Email Service Configuration (for verification emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@nexora.com
FRONTEND_URL=http://localhost:3000

# Social Media API Keys (Optional - will use realistic mock data if not provided)
# Instagram Basic Display API
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here

# Twitter API v2
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# TikTok API (Limited access)
TIKTOK_ACCESS_TOKEN=your_tiktok_token_here (for production)

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=deinfluencer-storage
